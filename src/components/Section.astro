---
import Typography from "@/components/Typography";

const { title } = Astro.props
---

<section>
  {title && <Typography variant="h1">{title}</Typography>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 20px;
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 20px;
    }
  }
</style>